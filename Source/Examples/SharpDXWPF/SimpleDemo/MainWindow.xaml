<Window xmlns:oxydx="http://oxyplot.org/sharpdx/wpf"  x:Class="SimpleDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Background="Green">
    <Window.DataContext>
        <local:MainViewModel />        
    </Window.DataContext>
    <Grid>
        <oxydx:PlotView Model="{Binding Model}" />
    </Grid>
</Window>
