             xmlns:oxy="clr-namespace:OxyPlot.Xamarin.Forms;assembly=OxyPlot.Xamarin.Forms"
             xmlns:demoApp="clr-namespace:DemoApp;assembly=DemoApp"
             x:Class="IssueDemos.BackgroundColorPickers">
