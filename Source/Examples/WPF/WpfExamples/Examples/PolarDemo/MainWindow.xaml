<Window x:Class="PolarDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf" xmlns:local="clr-namespace:PolarDemo"
        xmlns:contrib="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Contrib.Wpf"
        Title="PolarDemo" Height="480" Width="640">
    <TabControl>
        <TabItem Header="Defined by PlotModel">
            <oxy:PlotView Model="{Binding MyModel}"/>
        </TabItem>
        <TabItem Header="Defined in XAML">
            <contrib:Plot Title="Polar Plot" Subtitle="Archimedean spiral with equation r(θ) = θ for 0 &lt; θ &lt; 6π" PlotType="Polar" PlotMargins="20,20,4,40" PlotAreaBorderThickness="0">
                <contrib:Plot.Axes>
                    <contrib:MagnitudeAxis/>
                    <contrib:AngleAxis Minimum="0" Maximum="{Binding MaxAngle}" MajorStep="{Binding MajorStep}" MinorStep="{Binding MinorStep}" 
                                   FormatAsFractions = "true" FractionUnit = "{Binding PI}" FractionUnitSymbol = "π"/>
                </contrib:Plot.Axes>
                <contrib:Plot.Series>
                    <contrib:LineSeries ItemsSource="{Binding SpiralPoints}"/>
                </contrib:Plot.Series>
            </contrib:Plot>
        </TabItem>
    </TabControl>
</Window>
