<Window 
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:UserControlDemo="clr-namespace:AvaloniaExamples.Examples.UserControlDemo;assembly=AvaloniaExamples"
        Title="Plot in UserControl" Height="480" Width="640">
    <TabControl>
        <TabItem Header="{Binding Model1.Title}">
            <UserControlDemo:UserControl1 DataContext="{Binding Model1}"/>
        </TabItem>
        <TabItem Header="{Binding Model2.Title}">
            <UserControlDemo:UserControl1 DataContext="{Binding Model2}"/>
        </TabItem>
    </TabControl>
</Window>
