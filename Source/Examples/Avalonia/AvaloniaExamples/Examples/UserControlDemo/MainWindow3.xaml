<Window 
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:UserControlDemo="clr-namespace:AvaloniaExamples.Examples.UserControlDemo;assembly=AvaloniaExamples"
        xmlns:oxy="clr-namespace:OxyPlot.Avalonia;assembly=OxyPlot.Avalonia" Title="Plot in DataTemplate" Height="480" Width="640">
    <Window.DataTemplates>
        <DataTemplate DataType="{x:Type UserControlDemo:ViewModel}">
            <oxy:Plot Title="{Binding Title}">
                <oxy:Plot.Series>
                    <oxy:LineSeries Items="{Binding Points}"/>
                </oxy:Plot.Series>
                <oxy:Plot.Axes>
                    <oxy:LinearAxis Position="Bottom"/>
                    <oxy:LinearAxis Position="Left"/>
                </oxy:Plot.Axes>
            </oxy:Plot>
        </DataTemplate>
    </Window.DataTemplates>
    <ContentControl Content="{Binding}" />
</Window>
